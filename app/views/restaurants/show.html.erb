<div class="container p-5">

  <h2><%= @restaurant.name %></h2>
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.category %></p>
  <p><%= @restaurant.phone_number %></p>

  <h3>What People Have to Say</h3>
  <ul style="list-style-type: none" class="p-0">
    <% @restaurant.reviews.each do |review| %>
      <li class="pt-3 pb-3"><%= review.content %> <%= 'â­' * review.rating %></li>
    <% end %>
  </ul>

  <div class="container pl-0 pb-5 w-50 ml-0">
  <h4>Leave a review</h4>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, collection: 0..5 %>
    <%= f.submit class: "btn btn-success" %>
  <% end %>
</div>

  <%= link_to 'Go back', restaurants_path, class: "btn btn-warning"%>

</div>
